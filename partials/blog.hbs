<div id="blog" class="owen-section">
    <div class="container">
        <div class="row text-center">
            <h2 class="bold">Blog</h2>
        </div>
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center animate-box intro-heading">
                <span>Blog</span>
                <h2>What I've been up to</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="rotate">
                    <h2 class="heading">Our Blog</h2>
                </div>
            </div>
        </div>
        <div class="row animate-box">
            <div class="blog-carousel owl-carousel">
                {{#foreach posts}}
                <div class="item">
                    <div class="col-md-12">
                        <div class="article">
                            <a href="{{url}}" class="blog-img">
                                <img class="img-responsive" src="{{img_url feature_image}}" alt="{{title}}">
                                <div class="overlay"></div>
                                <div class="link">
                                    <span class="read">Read more</h2>
                                </div>
                            </a>
                            <div class="desc">
                                <span class="meta">{{date format="DD, MMM, YYYY"}}</span>
                                <h2>
                                    <a href="{{url}}">{{title}}</a>
                                </h2>
                                <p>{{excerpt}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/foreach}}
            </div>
        </div>
    </div>
</div>
